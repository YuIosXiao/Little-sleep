page{
    height:100%
}
.mycontainer{
    width: 100%;
    height: 100%;
    font-family: "微软雅黑";
}
.playContainer{
    width: 100%;
    /*height: 900rpx;*/
    height: 65%;
    position: fixed;
    display: flex;
    flex-direction:column;
    justify-content: flex-start;
    align-items: center;
    background-color: #3b3354;
}
.logo{
    width: 40%;
    height: 300rpx;
    padding: 50rpx 0 0;
}
.logo image{
    width: 100%;
    height: 100%;
}
.musicContrlBox{
    display: flex;
    flex-direction:column;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 150rpx;
}
.musicContrlBox text{
    color: white;
    font-size: 52rpx;
}
.musicPlayBtn{
    width: 50rpx;
    height: 50rpx;
    margin: 20rpx;
}
.musicPlayBtn image{
    width: 100%;
    height: 100%;
}
.autoClose{
    width: 200%;
    height:70px;
    text-align: center;
    position: relative;
}
.autoCloseTime{
    font-size: 20rpx;
    font-weight: 100;
    position: relative;
    z-index: 2;
}
.rangeBar{
    width: 100%;
    height: 20px;
    line-height: 20px;
    position: absolute;
    top: 0;
    background: deepskyblue;
    opacity: 0;
}
.rangeBar text{
    font-size: 24rpx;
}
.musicCloseBtn{
    width: 35rpx;
    height: 35rpx;
    margin-top: 50rpx;
}
.musicCloseBtn image{
    width: 100%;
    height: 100%;
}

.listContanier{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 51%;
}
.slideBgWrap{
    width: 100%;
    position: absolute;
    top: 0;
}
image#slideBg{
    width: 100%;
    display: block;
}
image#iconDown{
    width: 10px;
    position: absolute;
    top: 32px;
    left: 50%;
    margin-left: -5px;
    display: block;
}
audio{
    position: fixed;
    display: none;
}
.miuscList{
    height: 50%;
    overflow-y: scroll;
    /*padding-top: 900rpx;*/
    /*padding-top: 73%;*/
    margin-top: 23%;
    display: flex;
    flex-direction:row;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;/*换行*/
}
.miuscItem{
    width: 25%;
    margin-bottom: 20px;
    text-align: center;
}
.miuscItem image{
    width: 45%;
}
.miuscItem text{
    font-size: 28rpx;
    display: block;
}